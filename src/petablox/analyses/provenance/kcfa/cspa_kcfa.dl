.input MobjValAsgnInst()
.decl MobjVarAsgnInst(m:M,l:V,r:V)
.input MobjVarAsgnInst()
.decl MgetInstFldInst(m:M,l:V,b:V,f:F)
.input MgetInstFldInst()
.decl MputInstFldInst(m:M,b:V,f:F,r:V)
.input MputInstFldInst()
.decl MgetStatFldInst(m:M,l:V,f:F)
.input MgetStatFldInst()
.decl MputStatFldInst(m:M,f:F,r:V)
.input MputStatFldInst()

