.input objNewInstIH()
.decl objNewInstIM(i:I,m:M)
.input objNewInstIM()
.decl conNewInstIH(i:I,h:H)
.input conNewInstIH()
.decl conNewInstIM(i:I,m:M)
.input conNewInstIM()
.decl aryNewInstIH(i:I,h:H)
.input aryNewInstIH()

